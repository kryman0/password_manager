-- setup tables
---------------

begin transaction;

-- drop tables
drop table if exists passwords;
drop table if exists encryptions;
drop table if exists keys;

-- create encryptions
create table if not exists encryptions (
    id integer primary key,
    name text not null
);

-- create keys
create table if not exists keys (
    id integer primary key,
    key text not null
);

-- create passwords
create table if not exists passwords (
    id integer primary key autoincrement,
    title text not null,
    username text,
    password text,
    url text,
    description text,
    enc_id integer not null,
    key_id integer default null,
    foreign key(enc_id) references encryptions(id)
    foreign key(key_id) references keys(id)
);

-- insert encryptions
insert into encryptions values(1, 'plain_text');
insert into encryptions values(2, 'aes');

end transaction;
