-- setup tables
---------------

-- turn on foreign key constraint
-- PRAGMA foreign_keys = ON;

begin transaction;

-- drop tables
drop table if exists passwords;
drop table if exists encryptions;

-- create encryptions
create table if not exists encryptions (
    name text primary key
);

-- create passwords
create table if not exists passwords (
    title text not null,
    username text,
    password text,
    url text,
    description text,
    encryption text not null,
    foreign key(encryption) references encryptions(name)
);

end transaction;
