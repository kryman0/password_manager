-- setup tables
---------------

begin transaction;

-- drop tables
drop table if exists passwords;
drop table if exists encryptions;

-- create encryptions
create table if not exists encryptions (
    name text primary key
);

-- create passwords
create table if not exists passwords (
    title text not null,
    username text,
    password text,
    url text,
    description text,
    encryption text not null,
    foreign key(encryption) references encryptions(name)
);

-- insert encryptions
insert into encryptions values('plain_text');
insert into encryptions values('aes');
insert into encryptions values('3des');
insert into encryptions values('twofish');

end transaction;
